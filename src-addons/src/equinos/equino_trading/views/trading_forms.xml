<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_trading_forms_tree" model="ir.ui.view">
            <field name="name">Trading  Forms</field>
            <field name="model">trading.forms</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Trading Forms">
                    <field name="name" />
                    <field name="shipper_id"/>
                    <field name="from_departure_id"/>
                    <field name="to_arrive_id"/>
                    <field name="entry_date"/>
                    <field name="entry_time" widget="float_time"/>
                    <field name="release_date"/>
                    <field name="form_item_ids" widget='many2many_tags'/>
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_trading_forms_form" model="ir.ui.view">
            <field name="name">Certificates Regulations trading_forms</field>
            <field name="model">trading.forms</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Trading Form">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Company Trading Form Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="shipper_id"/>
                                <field name="from_departure_id"/>
                                <field name="to_arrive_id"/>
                            </group>    
                            <group>
                                <field name="entry_date"/>                                
                                <field name="entry_time" widget="float_time"/>
                                <field name="release_date"/>
                            </group>                        
                        </group>
                        <group string="Animals" class="mw-100">
                            <field name="form_item_ids" string="">
                                <tree  editable="bottom">
                                    <field name="name" string='Name'/>
                                    <field name="gender"/>
                                    <field name="specie_id"/>
                                    <field name="breed_id"/>
                                    <field name="age"/>
                                    <field name="color_id"/>
                                    <field name="id_number_microchip" string='Microchip'/>
                                    <field name="final_customer" string='Customer'/>
                                    <field name="t_number"/>
                                    <field name="driver_id" string='Driver'/>
                                </tree>
                            </field>
                        </group>
                        <group string='Share Link'>
                            <field name='invite_url' readonly='1' string=''/>                            
                        </group>
                        <group string='Oportunity'>
                            <field name='crf_crm_lead_id' readonly='1' string=''/>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_trading_forms_search" model="ir.ui.view">
            <field name="name">Search Trading  Forms</field>
            <field name="model">trading.forms</field>
            <field name="arch" type="xml">
                <search string="Company Trading Form">
                    <field name="name" select="True"/>
                    <field name="shipper_id" select="True"/>
                    <field name="from_departure_id" select="True"/>
                    <field name="to_arrive_id" select="True"/>
                    <field name="entry_date" select="True"/>
                    <field name="entry_time" select="True"/>
                    <field name="release_date" select="True"/>                    
                    <group string="Group By..">
                        <filter string="Shipper" domain="[]" name="group_by_from_departure_id" context="{'group_by':'from_departure_id'}"/>
                        <filter string="Departure" domain="[]" name="group_by_to_arrive_id" context="{'group_by':'to_arrive_id'}"/>
                        <filter string="Arrive" domain="[]" name="group_by_entry_date" context="{'group_by':'entry_date'}"/>
                        <filter string="Entry Date" domain="[]" name="group_by_release_date" context="{'group_by':'release_date'}"/>
                        <filter string="Release Date" domain="[]" name="group_by_release_date" context="{'group_by':'release_date'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_trading_forms_kanban" model="ir.ui.view" >
            <field name="name">Trading  Forms</field>
            <field name="model">trading.forms</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="shipper_id" />
                    <field name="from_departure_id" />
                    <field name="to_arrive_id" />
                    <field name="shipper_id" />
                    <field name="entry_date" />
                    <field name="release_date" />
                    <field name="entry_time" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Shipper: <field name="shipper_id"></field>
                                        </li>
                                        <li>
                                            Departure: <field name="from_departure_id"></field>
                                        </li>
                                        <li>
                                            Arrive: <field name="to_arrive_id"></field>
                                        </li>
                                        <li>
                                            Entry Date: <field name="entry_date"></field>
                                        </li>
                                        <li>
                                            Entry Time: <field name="entry_time" widget="float_time"/>
                                        </li>
                                        <li>
                                            Relase Date &#38; time: <field name="release_date"></field>
                                        </li>
                                        
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_trading_forms_graph" model="ir.ui.view">
            <field name="name">Trading  Forms</field>
            <field name="model">trading.forms</field>
            <field name="arch" type="xml">
                <graph string="Company Trading Form" type="bar">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="from_departure_id"/>
                    <field name="to_arrive_id"/>
                    <field name="entry_date"/>
                    <field name="entry_time" widget="float_time"/>
                    <field name="release_date"/>                    
                    <field name="shipper_id"/>
                    <field name="form_item_ids"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_trading_forms" model="ir.actions.act_window">
            <field name="name">Trading  Forms</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trading.forms</field>
            
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Company Form
                </p><p>
                Click the Create button to add a new Form
                </p>
            </field>
        </record>

        <record id="action_share_shipping_form" model="ir.actions.server">
            <field name="name">Share Shipping Form</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_trading_forms" />
            <field name="binding_model_id" ref="model_trading_forms" />
            <field name="state">code</field>
            <field name="code">action = records.share_shipping_form()</field>
        </record>

    </data>
</odoo>