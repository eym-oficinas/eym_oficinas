<odoo>
  <data>

    <record id="project_task_form_inherit" model="ir.ui.view">
      <field name="name">project.task.form</field>
      <field name="model">project.task</field>
      <field name="type">form</field>
      <field name="priority" eval="8"/>
      <field name="inherit_id" ref="project.view_task_form2"/>
      <field name="arch" type="xml">

        <field name="user_ids" position="after">
          <field name="is_trading_template" readonly='1' widget="boolean_toggle"/>
          <field name="service_type" readonly='1' attrs="{'invisible': [('is_trading_template', '=', True)]}"/>
        </field>        

      </field>
    </record>

    <record id="project_task_tree_inherit" model="ir.ui.view">
      <field name="name">project.task.tree</field>
      <field name="model">project.task</field>
      <field name="type">tree</field>
      <field name="priority" eval="8"/>
      <field name="inherit_id" ref="project.view_task_tree2"/>
      <field name="arch" type="xml">

        <field name="name" position="after">
          <field name="is_equine" widget="boolean_toggle"/>
          <field name="is_trading_template" attrs="{'invisible': [('is_equine', '=', True)]}" widget="boolean_toggle"/>
          <field name="service_type" attrs="{'invisible': [('is_equine', '=', True),('is_trading_template', '=', True)]}"/>
        </field>

      </field>
    </record>

  </data>
</odoo>