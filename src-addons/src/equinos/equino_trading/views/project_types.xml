<odoo>
  <data>

    <record id="project_task_type_edit_inherit" model="ir.ui.view">
      <field name="name">project.task.type.form</field>
      <field name="model">project.task.type</field>
      <field name="type">form</field>
      <field name="priority" eval="8"/>
      <field name="inherit_id" ref="project.task_type_edit"/>
      <field name="arch" type="xml">

        <field name="project_ids" position="after">
          <field name="force_state"/>
        </field>        

      </field>
    </record>

    <record id="project_task_type_tree_inherit" model="ir.ui.view">
      <field name="name">project.task.type.tree</field>
      <field name="model">project.task.type</field>
      <field name="type">tree</field>
      <field name="priority" eval="8"/>
      <field name="inherit_id" ref="project.task_type_tree"/>
      <field name="arch" type="xml">

        <field name="fold" position="after">
          <field name="force_state" widget="badge"  decoration-muted="force_state == 'in_progres'"  decoration-danger="force_state == 'blocked'"  decoration-success="force_state == 'ready'"/>
        </field>

      </field>
    </record>

  </data>
</odoo>