<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_trading_containers_tree" model="ir.ui.view">
            <field name="name">Trading Containers</field>
            <field name="model">trading.containers</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Trading Containers" editable='bottom'>
                    <field name="name" />
                    <field name="folio_id"/>
                    <field name="sequence_departure"/>
                    <field name="sequence_arrive"/>
                    <field name="datetime_checkin"/>
                    <field name="datetime_checkout"/>
                    <field name="state" 
                            widget="badge"
                            decoration-info="state == 'in_place'"
                            decoration-primary="state == 'to_place'"
                            decoration-warning="state == 'to_other_location'"
                            decoration-danger="state == 'other_location'"
                    />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_trading_containers_form" model="ir.ui.view">
            <field name="name">Trading Container</field>
            <field name="model">trading.containers</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Trading Container">
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Identifier"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                               

                                <field name="datetime_checkin"/>
                                <field name="datetime_checkout"/>

                                <field name="sequence_departure"/>
                                <field name="sequence_arrive"/>

                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_trading_containers_search" model="ir.ui.view">
            <field name="name">Search Trading Containers</field>
            <field name="model">trading.containers</field>
            <field name="arch" type="xml">
                <search string="Company Trading Form">
                    <field name="state" select="True" />
                    <field name="name"/>
                    <field name="sequence_departure"/>
                    <field name="sequence_arrive"/>
                    
                    <group string="Group By..">
                        <filter name="state_group" string="State" context="{'group_by': 'state'}" />
                        <filter name="sequence_departure_group" string="State" context="{'group_by': 'sequence_departure'}" />
                        <filter name="sequence_arrive_group" string="State" context="{'group_by': 'sequence_arrive'}" />
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_trading_containers_kanban" model="ir.ui.view" >
            <field name="name">Trading Containers</field>
            <field name="model">trading.containers</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="state" />
                    <field name="datetime_checkin" />
                    <field name="datetime_checkout" />
                    <field name="sequence_departure" />
                    <field name="sequence_arrive" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Current Reservation: <field name="folio_id"></field>
                                        </li>
                                        <li>
                                            State: <field name="state"></field>
                                        </li>
                                         <li>
                                            Check-In: <field name="datetime_checkin"></field>
                                        </li>
                                         <li>
                                            Check-Out: <field name="datetime_checkout"></field>
                                        </li>
                                        <li>
                                            Check-Out: <field name="datetime_checkout"></field>
                                        </li>
                                         <li>
                                            Departure: <field name="sequence_departure"></field>
                                        </li>
                                         <li>
                                            Arrive: <field name="sequence_arrive"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_trading_containers_graph" model="ir.ui.view">
            <field name="name">Trading Containers</field>
            <field name="model">trading.containers</field>
            <field name="arch" type="xml">
                <graph string="Company Trading Form" type="bar">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="datetime_checkin"/>
                    <field name="datetime_checkout"/>
                    <field name="sequence_departure"/>
                    <field name="sequence_arrive"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_trading_containers" model="ir.actions.act_window">
            <field name="name">Trading Containers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trading.containers</field>
            
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Container
                </p><p>
                Click the Create button to add a Container
                </p>
            </field>
        </record>

    </data>
</odoo>