<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="project_tree_inherit" model="ir.ui.view">
            <field name="name">Project Tracking</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project"/>
            <field name="priority">50</field>
            <field name="arch" type="xml">

                <field name="partner_id" position="before">

                    <field name="is_equine" widget="boolean_toggle"/>
                    <field name="is_checklist" widget="boolean_toggle"/>
                    <field name="is_trading_template" widget="boolean_toggle"/>
                    <field name="service_type"/>

                </field>

            </field>

        </record>

        <record id="view_project_kanban_inherit" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.project</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="inherit_id" ref="project.view_project_kanban"/>
            <field name="arch" type="xml">

                <field name="tag_ids" position="after">
                    <field name="is_equine" widget="boolean_toggle"/>
                    <field name="is_checklist" widget="boolean_toggle"/>
                    <field name="is_trading_template" widget="boolean_toggle"/>
                    <field name="is_checklist" widget="boolean_toggle"/>
                    <field name="service_type"/>
                </field>

                <xpath expr="//div[1]/div[3]" position="before">
                    <div class="row">

                        <div class="row">
                            <div class="col-3">
                                <b>
                                    <label for="is_equine">Trading</label>
                                </b>
                            </div>
                            <div class="col-2">
                                <field name="is_equine" widget="boolean_toggle"/>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-3">
                                <b>
                                    <label for="is_checklist">Checklist</label>
                                </b>
                            </div>
                            <div class="col-2">
                                <field name="is_checklist" widget="boolean_toggle"/>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-3">
                                <b>
                                    <label for="is_trading_template">Template</label>
                                </b>
                            </div>
                            <div class="col-2">
                                <field name="is_trading_template" widget="boolean_toggle"/>
                            </div>
                        </div>

                        <div class="row"  invisible="1" >
                            <div class="col-3">
                                <b>
                                    <label for="service_type">Service</label>
                                </b>
                            </div>
                            <div class="col-2">
                                <field name="service_type"/>
                            </div>
                        </div>

                    </div>

                </xpath>

                <a name="action_view_tasks" position="before">
                    <button string="Track" name="action_view_track" type="object" class="oe_highlight btn btn-outline-light" data-hotkey="g" attrs="{'invisible': [('is_equine','=',False)]}"/>
                </a>

            </field>
        </record>

        <record id="project_form_inherit" model="ir.ui.view">
            <field name="name">Project Tracking</field>
            <field name="model">project.project</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">

                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="action_view_track" icon="fa-plane" attrs="{'invisible': [('is_equine','=',False)]}">
                        <b>Track</b>
                    </button>
                </div>
                <field name="tag_ids" position="after">
                    <field name="is_trading_template" invisible="1"/>
                    <div class="row">
                        <div class="col-7">
                            <label for="is_equine" string="Trading  "/>
                        </div>

                        <div class="col-2">
                            <field class="col-8" name="is_equine" widget="boolean_toggle"/>
                        </div>
                    </div>
                </field>

                <page name="description" position="after">
                    <page string="Trading" attrs="{'invisible': [('is_equine','=',False)]}">
                      
                        <group class="col-8">
                            <field name="service_type" widget="radio" attrs="{'invisible': [('is_equine','=',False)]}"/>
                        </group>
                        
                        <group class="col-8">
                            <field name="is_checklist" widget="boolean_toggle"/>
                        </group>
                        
                        <group>
                            <field name="is_trading_template" widget="boolean_toggle"/>
                        </group>
                        
                        <div class="row" style='max-width: 125px;'>
                            <button title="Replicate" name="action_replicate_project_tracking" type="object" class="oe_highlight" data-hotkey="g" attrs="{'invisible': [('is_trading_template','=',False)]}">
                                <i class='fa fa-clone'/> Production
                            </button>
                        </div>
                        
                    </page>
                </page>

            </field>
        </record>

        <!-- action window -->
        <record id="action_cr_projects_tracker" model="ir.actions.act_window">
            <field name="name">Projects Tracker</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.project</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Projects Tracker
                </p>
                <p>
                Click the Create button to add a new Projects Tracker
                </p>
            </field>
        </record>

        <!-- action window -->
        <record id="action_cr_projects_checklist" model="ir.actions.act_window">
            <field name="name">Projects Checklist</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.project</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Projects Checklist
                </p>
                <p>
                Click the Create button to add a new Projects Checklist
                </p>
            </field>
        </record>

    </data>
</odoo>