<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="eym_report_purchaseorder_document_inherit" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//table[hasclass('o_main_table')]//tr//th[@name='th_taxes']" position="replace"/>
        <xpath expr="//table[hasclass('o_main_table')]//tr//th[@name='th_date_req']" position="replace"/>
        <xpath expr="//table[hasclass('o_main_table')]//tr//td[@name='td_taxes']" position="replace"/>
        <xpath expr="//table[hasclass('o_main_table')]//tr//td[2]" position="replace"/>
        <xpath expr="//t[@t-set='address']" position="replace"/>
        <xpath expr="//t[@t-set='information_block']" position="replace"/>
        <xpath expr="//div[@id='informations']" position="after">
            <div class="row">
                <style>
                    .page
                    {
                    font-size:12px!important;
                    color:black!important;
                    }
                    strong, h2
                    {
                    color:black!important;
                    }
                    
                </style>
                <table class="table table-sm table-bordered">
                    <tr style="font-size:12px;line-height: 90%;margin-left:-20px; padding:7px;">
                        <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;">Proveedor:</td>
                        <td colspan="3" style="padding:7px;">
                            <t t-esc="o.partner_id.name"/>
                        </td>
                    </tr>
                    <tr style="font-size:12px;line-height: 90%;margin-left:-20px; padding:7px;">
                        <t t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'civil_registration'">
                            <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;"> R.C.:</td>
                        </t>
                        <t t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'id_card'">
                            <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;"> T.I.:</td>
                        </t>
                        <t t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'id_document'">
                            <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;">  C.C.:</td>
                        </t>
                        <t t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'national_citizen_id'">
                            <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;">   C.C.:</td>
                        </t>
                        <t t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'residence_document'">
                            <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;">  T.E.:</td>
                        </t>
                        <t t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'foreign_id_card'">
                            <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;">  C.E.:</td>
                        </t>
                        <t t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'rut'">
                            <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;">  NIT: </td>
                        </t>
                        <t t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'passport'">
                            <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;"> PAS:</td>
                        </t>
                        <t t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'external_id'">
                            <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;"> D.I.E.:</td>
                        </t>
                        <t t-if="o.partner_id.l10n_latam_identification_type_id.l10n_co_document_code == 'diplomatic_card'">
                            <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;">   Tax ID:</td>
                        </t>
                        <td style="padding:7px;">
                            <span t-field="o.partner_id.vat"/>
                        </td>
                        <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;">
                            Telefono:     
                        </td>
                        <td style="padding:7px;">
                            <span t-field="o.partner_id.phone"/>
                            <span t-field="o.partner_id.mobile"/>
                        </td>
                    </tr>
                    <tr style="font-size:12px;line-height: 90%;margin-left:-20px; padding:7px;">
                        <td style="background-color: #d1d1d1;font-weight: bolder;color:black;padding:7px;">
                            Direccion: 
                        </td>
                        <td style="padding:7px;">
                            <span t-field="o.partner_id.street"/>
                            <span t-field="o.partner_id.street2"/>
                        </td>
                        <td style="background-color: #d1d1d1;font-weight: bolder;color:black;padding:7px;">
                            Ciudad:     
                        </td>
                        <td style="padding:7px;">
                            <span t-field="o.partner_id.city"/>
        /                            <span t-field="o.partner_id.country_id"/>
                        </td>
                    </tr>
                </table>

            </div>
        </xpath>
        <xpath expr="//div[@id='informations']" position="after">
            <t t-if="o.picking_type_id">
                <t t-if="o.picking_type_id.sequence_code == 'IN'">
                    <div class="row" style="margin-top:10px">
                        <table class="table table-sm table-bordered">
                            <tr style="font-size:12px;line-height: 90%;margin-left:-20px; padding:7px;">
                                <td colspan="4">
                                    <strong>Dirección de envío</strong>
                                </td>
                            </tr>
                            <tr style="font-size:12px;line-height: 90%;margin-left:-20px; padding:7px;">
                                <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;">Cliente:</td>
                                <td colspan="3" style="padding:7px;">
                                    <t t-esc="o.company_id.name"/>
                                </td>
                            </tr>
                            <tr style="font-size:12px;line-height: 90%;margin-left:-20px; padding:7px;">
                                <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;">  NIT: </td>
                                <td style="padding:7px;">
                                    <span t-field="o.company_id.vat"/>
                                </td>
                                <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;">
                              Telefono:     
                                </td>
                                <td style="padding:7px;">
                                    <span t-field="o.company_id.phone"/>
                                </td>
                            </tr>
                            <tr style="font-size:12px;line-height: 90%;margin-left:-20px; padding:7px;">
                                <td style="background-color: #d1d1d1;font-weight: bolder;color:black;padding:7px;">
                              Direccion: 
                                </td>
                                <td style="padding:7px;">
                                    <span t-field="o.company_id.street"/>
                                    <span t-field="o.company_id.street2"/>
                                </td>
                                <td style="background-color: #d1d1d1;font-weight: bolder;color:black;padding:7px;">
                              Ciudad:     
                                </td>
                                <td style="padding:7px;">
                                    <span t-field="o.company_id.city"/>
          /                                    <span t-field="o.company_id.country_id"/>
                                </td>
                            </tr>
                            <tr style="font-size:12px;line-height: 30%;margin-left:-20px; padding:7px;">
                                <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;">Correo:</td>
                                <td colspan="3" style="padding:7px;">
                                    <t t-esc="o.company_id.email"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
            <t t-if="o.picking_type_id">
                <t t-if="o.picking_type_id.sequence_code == 'DS'">
                    <div class="row" style="margin-top:10px">
                        <table class="table table-sm table-bordered">
                            <tr style="font-size:12px;line-height: 90%;margin-left:-20px; padding:7px;">
                                <td colspan="4">
                                    <strong>Dirección de envío</strong>
                                </td>
                            </tr>
                            <tr style="font-size:12px;line-height: 90%;margin-left:-20px; padding:7px;">
                                <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;">Cliente:</td>
                                <td colspan="3" style="padding:7px;">
                                    <t t-esc="o.dest_address_id.name"/>
                                </td>
                            </tr>
                            <tr style="font-size:12px;line-height: 90%;margin-left:-20px; padding:7px;">
                                <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;">  NIT: </td>
                                <td style="padding:7px;">
                                    <span t-field="o.dest_address_id.vat"/>
                                </td>
                                <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;">
                              Telefono:     
                                </td>
                                <td style="padding:7px;">
                                    <div>
                                        <span t-field="o.dest_address_id.phone"/>
                                    </div>
                                    <div>
                                        <span t-field="o.dest_address_id.mobile"/>
                                    </div>
                                </td>
                            </tr>
                            <tr style="font-size:12px;line-height: 90%;margin-left:-20px; padding:7px;">
                                <td style="background-color: #d1d1d1;font-weight: bolder;color:black;padding:7px;">
                              Direccion: 
                                </td>
                                <td style="padding:7px;">
                                    <span t-field="o.dest_address_id.street"/>
                                    <span t-field="o.dest_address_id.street2"/>
                                </td>
                                <td style="background-color: #d1d1d1;font-weight: bolder;color:black;padding:7px;">
                              Ciudad:     
                                </td>
                                <td style="padding:7px;">
                                    <span t-field="o.dest_address_id.city"/>
          /                                    <span t-field="o.dest_address_id.country_id"/>
                                </td>
                            </tr>
                            <tr style="font-size:12px;line-height: 30%;margin-left:-20px; padding:7px;">
                                <td style="background-color: #d1d1d1;font-weight: bolder;color:black; padding:7px;">Correo:</td>
                                <td colspan="3" style="padding:7px;">
                                    <t t-esc="o.dest_address_id.email"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </xpath>
    </template>
</odoo>