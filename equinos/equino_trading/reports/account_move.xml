<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_invoice_document_terms_condictions">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <t t-esc="o.terms_condictions"/>
            </t>
        </template>

        <template id="report_invoice_terms_condictions" inherit_id="account.report_invoice">
            <xpath expr="//t/t/t[last()]">
                <t t-call='equino_trading.report_invoice_document_terms_condictions'/>
            </xpath>
        </template>

        <template id="report_invoice_with_payments_terms_condictions" inherit_id="account.report_invoice_with_payments">
            <xpath expr="//t/t/t[last()]">
                <t t-call='equino_trading.report_invoice_document_terms_condictions'/>
            </xpath>
        </template>

    </data>
</odoo>