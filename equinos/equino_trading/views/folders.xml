<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_folder_tree" model="ir.ui.view">
            <field name="name">Certificates Regulations Folders</field>
            <field name="model">certificates.regulates.folders</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Folders_">
                    <field name="id" />
                    <field name="name" />
                    <field name="certificates_regulates_ids" widget='many2many_tags'/>
                </tree>
            </field>
        </record>
        <!-- form view -->
      
        <record id="view_folder_form" model="ir.ui.view">
            <field name="name">Certificates Regulations Folder</field>
            <field name="model">certificates.regulates.folders</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Folder">
                    <header>
                    </header>
                    <sheet>
                      
                        <div class="oe_button_box" name="button_box">
                        
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                          
                        </div>
                        
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Folder Name"/>
                            <h1><field name="name" required='1'/></h1>
                        </div>
                        
                        <div class="row">
                          <group string="Documents1">
                              <field string="" name="certificates_regulates_ids"/>
                          </group>
                        </div>
                        
                        <div class="row">
                            <group string="CRM Leads">
                              <field string="" name="crf_crm_lead_id"/>
                            </group>
                        </div>
                        
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- search -->
        <record id="view_folder_search" model="ir.ui.view">
            <field name="name">Search Certificates Regulations Folders</field>
            <field name="model">certificates.regulates.folders</field>
            <field name="arch" type="xml">
                <search string="Folders">
                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <field name="name" select="True"/>
                    <field name="certificates_regulates_ids" select="True"/>
                    <group string="Group By..">
                        <filter string="Folders" domain="[]" name="group_by_certificates_regulates_ids" context="{'group_by':'certificates_regulates_ids'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_folder_kanban" model="ir.ui.view" >
            <field name="name">Certificates Regulations Folders</field>
            <field name="model">certificates.regulates.folders</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="certificates_regulates_ids" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Documents: <field name="certificates_regulates_ids" widget='many2many_tags'></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_folder_graph" model="ir.ui.view">
            <field name="name">Certificates Regulations Folders</field>
            <field name="model">certificates.regulates.folders</field>
            <field name="arch" type="xml">
                <graph string="Folders" type="bar">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="certificates_regulates_ids"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_folder" model="ir.actions.act_window">
            <field name="name">Certificates Regulations Folders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">certificates.regulates.folders</field>
            
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Company Folder
                </p><p>
                Click the Create button to add a new Folder
                </p>
            </field>
        </record>

    </data>
</odoo>