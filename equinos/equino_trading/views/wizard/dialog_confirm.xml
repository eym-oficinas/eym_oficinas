<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- form view -->
        <record id="view_dialog_confirm_form" model="ir.ui.view">
            <field name="name">Diealog Confirm</field>
            <field name="model">dialog.confirm</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Track">
                    <sheet>
                        <group>
                            <field name='text' />
                            <field name='action' invisible='1'/>
                        </group>
                        <footer>
                            <button name="action_confirm_dialog" type="object" string="Confirm" class="oe_highlight"/>
                            <button special="cancel" string="No"/> 
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>