<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_certificates_regulates_tree" model="ir.ui.view">
            <field name="name">Certifications and Regulations</field>
            <field name="model">certificates.regulates</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Certificates Regulates">
                    <field name="name" />
                    <field name="type" />
                    <!-- <field name="service_type" /> -->
                    <field name="project_id" /> 
                    <field name="folder_id" />                   
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_certificates_regulates_form" model="ir.ui.view">
            <field name="name">Certifications and Regulations</field>
            <field name="model">certificates.regulates</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Certificates Regulates">
                    <header>
                    </header>
                    <sheet>

                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Certificates Regulates Name"/>
                            <h1><field name="name"  required="1"/></h1>
                        </div>
                        
                        <group>

                            <group class="row">
                                <!-- <field name="service_type" widget="radio" required="1"/> -->
                                <field name="type" widget="radio" required="1"/>
                                <field name="file_name" invisible='1'/>
                                <field name="file" filename='file_name' attrs="{'invisible': [('type', '=', 'project')]}"/>
                                <field name="project_id" attrs="{'invisible': [('type', '=', 'binary')]}"/>
                                <field name="is_trading_template" invisible="1"/>
                                <div attrs="{'invisible': [('type','!=','project')]}">
                                  <div class="col-1">
                                    <button string="" name="action_create_empty_staged_project" type="object" class="oe_highlight" data-hotkey="g" attrs="{'invisible': [('project_id','!=',False)]}" title="Create Empty One">
                                        <i class="fa fa-plus"/>
                                    </button>
                                  </div>
                                  <div class="col-1">
                                    <button string="" name="action_create_project_from_template" type="object" class="oe_highlight" data-hotkey="g" attrs="{'invisible': [('project_id','=',False), ('is_trading_template','=',False)]}" title="Create From Cheklist Template">
                                        <i class="fa fa-clone"/>
                                    </button>
                                  </div>
                                </div>
                            </group>  
                            
                            <group class="row">
                                <field name="folder_id"/>
                            </group>                         

                        </group>

                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_certificates_regulates_search" model="ir.ui.view">
            <field name="name">Search Certifications and Regulations</field>
            <field name="model">certificates.regulates</field>
            <field name="arch" type="xml">
                <search string="Certificates Regulates">

                    <field name="name" select="True"/>
                    <!-- <field name="service_type" select="True"/> -->
                    <field name="type" select="True"/>
                    <field name="file" select="True"/>
                    <field name="project_id" select="True"/>
                    <field name="folder_id" select="True"/>

                    <!-- <filter string="Import" name="filter_by_service_tipe_import" domain="[('service_type','=','import')]" /> -->
                    <!-- <filter string="Export" name="filter_by_service_tipe_export" domain="[('service_type','=','export')]" /> -->
                    <separator/>
                    <filter string="File" name="filter_by_type_binary" domain="[('file','=','binary')]" />
                    <filter string="Project" name="filter_by_type_binary" domain="[('file','=','project')]" />
                    <separator/>
                    
                    
                    <group string="Group By..">
                        <!-- <filter string="Service Type" domain="[]" name="group_by_service_type" context="{'group_by':'service_type'}"/> -->
                        <filter string="Type" domain="[]" name="group_by_type" context="{'group_by':'type'}"/>
                        <filter string="Folder" domain="[]" name="group_by_folder" context="{'group_by':'folder_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_certificates_regulates_kanban" model="ir.ui.view" >
            <field name="name">Certifications and Regulations</field>
            <field name="model">certificates.regulates</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="file" />
                    <!-- <field name="service_type" /> -->
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Type: <field name="type"></field>
                                        </li>                                        
                                        <!-- <li> -->
                                            <!-- Service Type: <field name="service_type"></field> -->
                                        <!-- </li> -->
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_certificates_regulates_graph" model="ir.ui.view">
            <field name="name">certificates_regulates</field>
            <field name="model">certificates.regulates</field>
            <field name="arch" type="xml">
                <graph string="Certificates Regulates" type="bar">
                    <field name="id"/>
                    <field name="name"/>
                    <!-- <field name="service_type"/> -->
                    <field name="type"/>               
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_certifications_regulations" model="ir.actions.act_window">
            <field name="name">Certifications and Regulations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">certificates.regulates</field>
            
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Certificates Regulates
                </p><p>
                Click the Create button to add a new Certificates Regulates
                </p>
            </field>
        </record>
        <!-- action window -->
        <record id="action_regulations" model="ir.actions.act_window">
            <field name="name">Regulations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">certificates.regulates</field>
            
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Regulations
                </p><p>
                Click the Create button to add a new Regulations
                </p>
            </field>
        </record>
        <!-- action window -->
        <record id="action_certifications" model="ir.actions.act_window">
            <field name="name">Certifications</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">certificates.regulates</field>
            
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Regulation
                </p><p>
                Click the Create button to add a new Regulation
                </p>
            </field>
        </record>
        
    </data>
</odoo>