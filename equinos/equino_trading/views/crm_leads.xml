<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="crm_lead_view_form_inherit" model="ir.ui.view">
            <field name="name">Oportunities</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
            
                <xpath expr="//div[1]/button[last()]" position="after">
                    <field name='project_id' invisible='1'/>
                    <button class="oe_stat_button" type="object" name="action_view_invoices" icon="fa-pencil-square-o"  attrs="{'invisible': [('invoice_count', '=', 0)]}">
                       <field name='invoice_count'/> Invoices
                    </button>
                    <button class="oe_stat_button" type="object" name="action_view_track" icon="fa-plane"  attrs="{'invisible': [('project_id', '=', False)]}">
                       Track
                    </button>
                    <!-- <button class="oe_stat_button" type="object" name="action_view_folders" icon="fa-folder"  attrs="{'invisible': [('certificates_regulates_folders_count_ids', '=', 0)]}"> -->
                    <button class="oe_stat_button" type="object" name="action_view_folders" icon="fa-folder"  >
                        <field name="certificates_regulates_folders_count_ids" widget="statinfo" string="Folders"/>
                    </button>
                    <button class="oe_stat_button" type="object" name="action_view_files" icon="fa-file" attrs="{'invisible': [('certificates_regulates_count_ids', '=', 0)]}">
                        <field name="certificates_regulates_count_ids" widget="statinfo" string="Documents"/>
                    </button>
                </xpath>  

                <xpath expr="//page[last()]" position="after">
                    <page name="certifications_and_regulations" string="Certifications and Regulations">                        

                        <group string='Folders'>
                            <field string='' name='certificates_regulates_folders_ids' widget='many2many' readonly='1'/>                            
                            <!-- <field string='s_s' name='certificates_regulates_folders_ids'/>                             -->
                        </group>

                        <group string="Share Documents">   
                            <div class="col-4">
                                <field name='share_type' widget='radio'/>
                            </div>
                            
                            <div class='col-4'>
                                <button string="Share" name="action_share_folder_documents" type="object" class="oe_highlight" data-hotkey="g"  attrs="{'invisible': [('certificates_regulates_folders_ids','=',False)]}">
                                    <i class='fa fa-paper-plane'/>
                                </button>
                            </div>
                            <div class="col-4">
                                <label for="sit_subject" string='Asunto' />
                            </div>
                            <div >
                                <field name='sit_subject'/>
                            </div>                            
                            <field name="receips_ids" attrs="{'invisible': [('share_type','=','customer')]}">
                                <tree>
                                    <field name='name'/>
                                    <field name='contact_ids' widget='many2many_tags'/>
                                </tree>
                            </field>

                            <field string='Files to Include' name='certificates_regulates_ids' widget='many2many_tags' domain="[['id','in',filter_certificates_regulates_ids]]"/>
                            <field string='' name='filter_certificates_regulates_ids' widget='many2many_tags' invisible='1'/>

                            <div class="col-4">
                                <label for="sit_body" string='Contenido' />
                            </div>
                            <div >
                                <field name='sit_body'  widget="html" options="{'codeview': true}"/>
                            </div>                            
                        </group>

                    </page>
                </xpath>  

            </field>
        </record>

        <record id="view_crm_leads_form_inherit" model="ir.ui.view">
            <field name="name">Trading Oportunity</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                
                <field name='expected_revenue' position='replace'>
                    <field name="expected_revenue" class="oe_inline" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                </field>

                <field name='probability' position='replace'>
                    <field name="probability" widget="float" class="oe_inline o_input_8ch"/>
                </field>

                <field name='phone' position='after'>
                    <field name='mobile' widget='phone'/>
                </field>

               <xpath expr="//field[@name='name']" position="replace">
                    <field name="is_equine" invisible="1"/>
                    <field name="name"/>
                </xpath> 
                 <xpath expr="//notebook" position="before">
                    <div class='row'>
                        <div class='o_horizontal_separator mt-4 mb-3 text-uppercase fw-bolder'>
                            <i class='fa fa-exchange'/> Trading
                        </div>
                        <div class="col-4">
                            <label for="is_equine" string='Trading' class='col-3'/>
                            <field name="is_equine" widget="boolean_toggle" class='col-3'/>
                        </div> 
                        <div class="col-7">
                            <label for="service_type" class='col-3'/>
                            <field class='col-4' name="service_type" widget="radio" attrs="{'invisible': [('is_equine', '=', False)], 'required': [('is_equine', '=', True)]}"/>
                        </div>   
                    </div>
                    <div attrs="{'invisible': [('is_equine', '=', False)]}">
                        
                        <div attrs="{'invisible': [('is_equine', '=', False)]}">   

                            <div class='o_horizontal_separator mt-4 mb-3 text-uppercase fw-bolder'>
                                <i class='fa fa-plane'/> Fly
                            </div>  
                            
                            <div class='row'>   
                                                                            
                                <div class='col-4'>
                                    <label for="sequence_date"/>
                                    <field name="sequence_date" attrs="{'invisible': [('is_equine', '=', False)]}" style='max-width: 133px'/>
                                </div>
                                <div class='col-4'>
                                    <label for="sequence_qty"/>
                                    <!-- <field name="sequence_qty" attrs="{'invisible': [('is_equine', '=', False)], 'required': [('is_equine', '=', True)]}"/> -->
                                    <field name="sequence_qty" attrs="{'invisible': [('is_equine', '=', False)] }"/>
                                </div>  
                                <div class='col-4'>
                                    <label for="sequence_specie"/>
                                    <!-- <field name="sequence_specie" attrs="{'invisible': [('is_equine', '=', False), ('sequence_qty', '=', 0)], 'required': [('is_equine', '=', True)]}"/> -->
                                    <field name="sequence_specie" attrs="{'invisible': [('is_equine', '=', False), ('sequence_qty', '=', 0)]  }"/>
                                </div>  
                            </div> 

                            <div class='row'> 
                                
                                <div class='col-4'>
                                    <label for="sequence_departure"/>
                                    <!-- <field name="sequence_departure" attrs="{'invisible': [('is_equine', '=', False)], 'required': [('is_equine', '=', True)]}"/> -->
                                    <field name="sequence_departure" attrs="{'invisible': [('is_equine', '=', False)] }"/>
                                </div> 
                                <div class='col-4'>
                                    <label for="sequence_arrive"/>
                                    <!-- <field name="sequence_arrive" attrs="{'invisible': [('is_equine', '=', False)], 'required': [('is_equine', '=', True)]}"/> -->
                                    <field name="sequence_arrive" attrs="{'invisible': [('is_equine', '=', False)] }"/>
                                </div> 
                                <div class='col-4'>
                                    <label for="trading_airline"/>
                                    <field name="trading_airline"  attrs="{'invisible': [('is_equine', '=', False)]}"/>
                                </div>
                            </div>  

                            <div class='o_horizontal_separator mt-4 mb-3 text-uppercase fw-bolder'>
                                <i class='fa fa-globe'/>  Shipping
                            </div>  

                            <div class='row'> 

                                <div class='col-4 for-fit'>
                                    <label for="form_id"/>
                                    <field name='form_id'  domain="[['crf_crm_lead_id','=',id]]" invisible="1"/>
                                </div> 
                                <div class='col-2 small-button'  attrs="{'invisible': [('form_id','=',False)]}">
                                    <button title='Share Shipping Form' string="" name="action_share_shipping_form" type="object" class="oe_highlight" data-hotkey="g" ><i class='fa fa-paper-plane'/></button>
                                </div>
                                <div class='col-2 small-button' attrs="{'invisible': [('form_id','!=',False)]}">
                                    <button title='Create Shipping Form' string="" name="action_create_shipping_form" type="object" class="oe_highlight" data-hotkey="g" ><i class='fa fa-plus'/></button>
                                </div>
                                

                                <div class='col-4 for-fit '>
                                    <label for="project_id"/>
                                    <field name="is_project_template" invisible='1'/>
                                    <field name="project_id" attrs="{'invisible': [('is_equine', '=', False)], 'required': [('is_equine', '=', True)]}"  domain="[('is_equine', '=', True), ('service_type', '=', service_type)]"/>                                                                    
                                </div> 
                                <div class='col-2 small-button'>
                                    <button title='Clone project tacking from selected' string="" name="action_replicate_project_tracking" type="object" class="oe_highlight" data-hotkey="g"  attrs="{'invisible': [('is_project_template','=',False)]}">
                                        <i class='fa fa-clone'/>
                                    </button>
                                    <button title='Track Form View' string="" name="action_view_track_form" type="object" class="oe_highlight" data-hotkey="g"  attrs="{'invisible': [('project_id','=',False)]}">
                                        <i class='fa fa-th-list'/>
                                    </button>
                                </div>

                            </div>   
                        
                        </div>
                    </div>
                </xpath>            
            </field>
        </record>
        
        
        <!-- action window -->
        <record id="action_crm" model="ir.actions.act_window">
            <field name="name">Oportunities</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.lead</field>            
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Oportunity
                </p><p>
                Click the Create button to add a new Oportunity
                </p>
            </field>
        </record>

    </data>
</odoo>