<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_trading_species_tree" model="ir.ui.view">
            <field name="name">Trading Species</field>
            <field name="model">trading.species</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Trading  Species">
                    <field name="name" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_trading_species_form" model="ir.ui.view">
            <field name="name">Trading Specie</field>
            <field name="model">trading.species</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Trading Specie">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Trading Specie Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_trading_species_search" model="ir.ui.view">
            <field name="name">Search Trading Species</field>
            <field name="model">trading.species</field>
            <field name="arch" type="xml">
                <search string="Trading Specie">
                    <field name="name" select="True"/>
                    <group string="Group By..">
                  
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_trading_species_kanban" model="ir.ui.view" >
            <field name="name">Trading  Species</field>
            <field name="model">trading.species</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_trading_species_graph" model="ir.ui.view">
            <field name="name">Trading Species</field>
            <field name="model">trading.species</field>
            <field name="arch" type="xml">
                <graph string="Trading Specie" type="bar">
                    <field name="id"/>
                    <field name="name"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_trading_species" model="ir.actions.act_window">
            <field name="name">Trading Species</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trading.species</field>
            
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Specie
                </p><p>
                Click the Create button to add a Specie
                </p>
            </field>
        </record>

    </data>
</odoo>