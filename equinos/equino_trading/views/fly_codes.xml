<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_fly_codes_tree" model="ir.ui.view">
            <field name="name">Fly Codes</field>
            <field name="model">fly.codes</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Fly Codes">
                    <field name="name" />
                    <field name="code"/>
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_fly_codes_form" model="ir.ui.view">
            <field name="name">Fly Codes</field>
            <field name="model">fly.codes</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Fly Code">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Company Barn Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="code" required='1'/>
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_fly_codes_search" model="ir.ui.view">
            <field name="name">Search Fly Codes</field>
            <field name="model">fly.codes</field>
            <field name="arch" type="xml">
                <search string="Company Barn">
                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <field name="name" select="True"/>
                    <field name="code" select="True"/>
                    <group string="Group By..">
                        <filter string="Fly Code" domain="[]" name="group_by_code" context="{'group_by':'code'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_fly_codes_kanban" model="ir.ui.view" >
            <field name="name">Fly Codes</field>
            <field name="model">fly.codes</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="code" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Code: <field name="code"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_fly_codes_graph" model="ir.ui.view">
            <field name="name">Barns</field>
            <field name="model">fly.codes</field>
            <field name="arch" type="xml">
                <graph string="Fly Code" type="bar">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="code"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_fly_codes" model="ir.actions.act_window">
            <field name="name">Fly Codes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fly.codes</field>
            
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Fly Code
                </p><p>
                Click the Create button to add a new Fly Code
                </p>
            </field>
        </record>

    </data>
</odoo>