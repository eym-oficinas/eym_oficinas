<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_trading_forms_color_tree" model="ir.ui.view">
            <field name="name">Trading Colors</field>
            <field name="model">trading.colors</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Trading Forms">
                    <field name="name" />
                    <field name="color"/>
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_trading_forms_color_form" model="ir.ui.view">
            <field name="name">Trading Color</field>
            <field name="model">trading.colors</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Trading Form">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Company Trading Form Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="color" widget='color_picker'/>
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_trading_forms_color_search" model="ir.ui.view">
            <field name="name">Search Trading Colors</field>
            <field name="model">trading.colors</field>
            <field name="arch" type="xml">
                <search string="Company Trading Form">
                    <field name="name" select="True"/>
                    <field name="color" select="True"/>
                    <group string="Group By..">
          
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_trading_forms_color_kanban" model="ir.ui.view" >
            <field name="name">Trading Colors</field>
            <field name="model">trading.colors</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="color" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Color: <field name="color"  widget='color_picker'></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_trading_forms_color_graph" model="ir.ui.view">
            <field name="name">Trading Colors</field>
            <field name="model">trading.colors</field>
            <field name="arch" type="xml">
                <graph string="Company Trading Form" type="bar">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="color"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_trading_colors" model="ir.actions.act_window">
            <field name="name">Trading Colors</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trading.colors</field>
            
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Company Color
                </p><p>
                Click the Create button to add a Color
                </p>
            </field>
        </record>

    </data>
</odoo>