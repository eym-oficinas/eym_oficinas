<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- tree view -->
        <record id="view_project_tracker_grid_tree" model="ir.ui.view">
            <field name="name">Tracks</field>
            <field name="model">project.tracker.grid</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Tracks" editable="bottom" create="false" delete="false">
                    <field name="name" invisible="1"/>
                    <field name="project_id" readonly='1' invisible="1"/>
                    <field name="service_type" readonly='1'/>
                    <field name="estimate_departmenture_arrival"/>
                    <field name="import_permit" widget='boolean_toggle'/>
                    <field name="import_permit_paid" widget='boolean_toggle'/>
                    <field name="usda_res_72hrs" widget='boolean_toggle'/>
                    <field name="usda_res_72hrs_date"/>
                    <field name="field_17_29" widget='boolean_toggle'/>
                    <field name="usda_mac_sent_date"/>
                    <field name="hc_start_res_paid"/>
                    <field name="hc_end_res_paid"/>
                    <!-- <field name="hc_start_res_paid" optional="hide"/> -->
                    <field name="hc_expiration"/>
                    <!-- <field name="hc_expiration" optional="hide"/> -->
                    <field name="hc_sent_to_usda"/>
                    <!-- <field name="hc_sent_to_usda" optional="hide"/> -->
                    <field name="billed_paid"/>
                    <field name="mac_shipment_id" optional="hide"/>
                    <field name="q_start_reserve"/>
                    <field name="custom_clarance"/>
                    <field name="invoice_shipping_ccial_freigth_forward" optional="hide"/>
                    <field name="airline_reserve_guide" optional="hide"/>
                    <field name="pc_check_date"/>
                    <field name="pc_check" widget='boolean_toggle'/>
                    <field name="realse_date_departure"/>
                    <field name="stalls" optional="hide"/>
                    <field name="awb" optional="hide"/>
                    <field name="cert_origin" optional="hide"/>
                    <field name="tags_ship" optional="hide"/>                    
                    <field name="actual_work" optional="hide"/>
                    <field name="animal_handler" optional="hide"/>
                    <field name="pending" optional="hide"/>
                    <field name="stalls_2" optional="hide"/>
                    <field name="stalls_set3" optional="hide"/>
                    <field name="pending6" optional="hide"/>
                </tree>
            </field>
        </record>

        <!-- form view -->
        <record id="view_project_tracker_grid_form" model="ir.ui.view">
            <field name="name">Project Tracker Grid</field>
            <field name="model">project.tracker.grid</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Track">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                            <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                            <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="project_id" class="oe_edit_only" string="Track"/>
                            <h1>
                                <field name="project_id"/>
                            </h1>
                        </div>
                            <group>
                                <field name="name" invisible="1"/>
                                <field name="service_type" readonly='1'/>
                            </group>
                            <group>
                                <field name="estimate_departmenture_arrival"/>
                                <field name="realse_date_departure"/>
                            </group>
                            <group>
                                <field name="import_permit"/>
                                <field name="import_permit_paid"/>
                            </group>
                            <group>
                                <field name="usda_res_72hrs"/>
                                <field name="usda_res_72hrs_date"/>
                            </group>
                            <group>
                                <field name="field_17_29"/>
                            </group>
                            <group>
                                <field name="usda_mac_sent_date"/>
                            </group>
                            <group>
                                <field name="hc_start_res_paid"/>
                                <field name="hc_expiration"/>
                                <field name="hc_sent_to_usda"/>
                            </group>
                            <group>
                                <field name="billed_paid"/>
                            </group>
                            <group>
                                <field name="mac_shipment_id"/>
                            </group>
                            <group>
                                <field name="q_start_reserve"/>
                            </group>
                            <group>
                                <field name="custom_clarance"/>
                            </group>
                            <group>
                                <field name="custom_clarance"/>
                            </group>
                            <group>
                                <field name="invoice_shipping_ccial_freigth_forward"/>
                            </group>
                            <group>
                                <field name="airline_reserve_guide"/>
                            </group>
                            <group>
                                <field name="pc_check_date"/>
                                <field name="pc_check"/>
                            </group>
                            <group>
                                <field name="stalls"/>
                                <field name="awb"/>
                                <field name="cert_origin"/>
                                <field name="tags_ship"/>
                                <field name="actual_work"/>
                                <field name="animal_handler"/>
                                <field name="pending"/>
                            </group>
                            <group>
                                <field name="stalls_2"/>
                                <field name="stalls_set3"/>
                            </group>
                            <group>
                                <field name="pending6"/>
                                <field name="is_trading_template" invisible='1'/>
                            </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- action window -->
        <record id="action_project_tracker_grid" model="ir.actions.act_window">
            <field name="name">Tracks</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.tracker.grid</field>
            <field name="view_ids" eval="[(5, 0, 0),(0, 0, {'view_mode': 'tree', 'view_id': ref('equino_trading.view_project_tracker_grid_tree')})]"/>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Track
                </p><p>
                Click the Create button to add a new Track
                </p>
            </field>
        </record>


        <record id="view_search_all_project_tracker_grid" model="ir.ui.view">
            <field name="name">Search Tracks</field>
            <field name="model">project.tracker.grid</field>
            <field name="arch" type="xml">
                <search string="Tracks">

                    <field name="name" select="True"/>
                    <field name="project_id"/>
                    <field name="service_type"/>
                    <field name="estimate_departmenture_arrival"/>
                    <field name="import_permit"/>
                    <field name="usda_mac_sent_date"/>
                    <field name="hc_expiration"/>
                    <field name="hc_sent_to_usda"/>
                    <field name="billed_paid"/>
                    <field name="mac_shipment_id"/>
                    <field name="q_start_reserve"/>
                    <field name="custom_clarance"/>
                    <field name="invoice_shipping_ccial_freigth_forward"/>
                    <field name="airline_reserve_guide"/>
                    <field name="pc_check_date"/>
                    <field name="is_trading_template" select='True'/>
                    
                    <separator/>
                    <filter string="Export" name="export_service_type" domain="[['service_type','=','export']]"/>
                    <separator/>
                    <filter string="Import" name="import_service_type" domain="[['service_type','=','import']]"/>
                    <separator/>
                    <filter string="Transit" name="transit_service_type" domain="[['service_type','=','transit']]"/>
                    <separator/>
                    <filter string="Templates" name="is_trading_template" domain="[['is_trading_template','=',True]]"/>
                    <separator/>
                    <filter string="Without Templates" name="no_is_trading_template" domain="[['is_trading_template','=',False]]"/>
                    <separator/>
                    <group string="Group By..">
                        <filter string="Project" domain="" name="group_by_project_id" context="{'group_by':'project_id'}"/>
                        <filter string="Service Type" domain="" name="group_by_service_type" context="{'group_by':'service_type'}"/>
                    </group>
                </search>
            </field>
        </record>        

    </data>
</odoo>