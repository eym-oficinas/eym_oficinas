<odoo>
    <data>

        <record id="email_invite_shipping_form" model="mail.template">
            <field name="name">Shipping Form Fillment</field>
            <field name="model_id" ref="equino_trading.model_trading_forms"/>
            <field name="subject">Shipping Form Fillment</field>
            <field name="email_from">{{ (object.user_id.email_formatted or user.email_formatted) }}</field>
            <field name="email_to">{{object.shipper_id.email}}</field>
            <field name="lang">{{object.shipper_id.lang}}</field>
            <field name="description">Fill Shipping Form</field>
            <field name="body_html" type="html">
                <p>
                    <p>
                        Dear <t t-esc="object.shipper_id.name"></t>,
                    </p>
                    <p>
                        <span>Kindly, fill shipping form following next link.</span>
                    </p>
                    <p>
                        <a t-att-href="object.invite_url" class="link-primary">Shipping Form</a>
                    </p>
                    <p>
                        <span>Regards,</span>  <t t-esc="object.user_id.name"></t>
                    </p>
                </p>
            </field>
            <field name="lang">{{ object.shipper_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>