<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_services_veterinary_tree" model="ir.ui.view">
            <field name="name">Veterinary Services</field>
            <field name="model">hotel.services.veterinary</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Trading  Species">
                    <field name="name" />
                    <field name="product_id" />
                    <field name="service_categ_id" />
                    <field name="product_manager" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_services_veterinary_form" model="ir.ui.view">
            <field name="name">Veterinary Service</field>
            <field name="model">hotel.services.veterinary</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Veterinary Service">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Veterinary Service Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <field name="product_id" />
                            <field name="service_categ_id" />
                            <field name="product_manager" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_services_veterinary_search" model="ir.ui.view">
            <field name="name">Search Veterinary Services</field>
            <field name="model">hotel.services.veterinary</field>
            <field name="arch" type="xml">
                <search string="Veterinary Service">
                    <field name="name" select="True"/>
                    <field name="product_id" />
                    <field name="service_categ_id" />
                    <field name="product_manager" />
                    <group string="Group By..">
                  
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_services_veterinary_kanban" model="ir.ui.view" >
            <field name="name">Veterinary Services</field>
            <field name="model">hotel.services.veterinary</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="product_id" />
                    <field name="service_categ_id" />
                    <field name="product_manager" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            <i class='fa fa-heat'/> Product:  <field name="product_id" />
                                        </li>
                                        <li>
                                             <i class='fa fa-sitemap'/> Category: <field name="service_categ_id" />
                                        </li>
                                        <li>
                                           <i class='fa fa-user'/> Manager:  <field name="product_manager" />
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_services_veterinary_graph" model="ir.ui.view">
            <field name="name">Veterinary Services</field>
            <field name="model">hotel.services.veterinary</field>
            <field name="arch" type="xml">
                <graph string="Veterinary Service" type="bar">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="product_id" />
                    <field name="service_categ_id" />
                    <field name="product_manager" />
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_services_veterinary" model="ir.actions.act_window">
            <field name="name">Veterinary Service</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hotel.services.veterinary</field>
            
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Veterinary Service
                </p><p>
                Click the Create button to add a Veterinary Service
                </p>
            </field>
        </record>

    </data>
</odoo>