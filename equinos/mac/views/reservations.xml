<odoo>
  <data>

    <record id="open_hotel_folio2_form_tree_all" model="ir.actions.act_window">
      <field name="name">Reservations</field>
      <field name="res_model">hotel.folio</field>
      <field name="view_mode">tree,form,calendar,graph</field>
      <field name="context">{'folio': True}</field>
    </record>

    <record id="view_hotel_folio2_form_inherit" model="ir.ui.view">
      <field name="name">hotel.folio.form</field>
      <field name="model">hotel.folio</field>
      <field name="type">form</field>
      <field name="priority" eval="8"/>
      <field name="inherit_id" ref="animal_center.view_hotel_folio_form_inherit"/>
      <field name="arch" type="xml">

        <xpath expr="//notebook/page[last()]" position="after">

          <page string="MAC - Services">

            <group string='Feeding'>
              <field name='feeding_services_ids' string=''>
                <tree editable="bottom">
                  <field name='product_id' string='Service'/>
                  <field name='name' string='Description'/>
                </tree>               
              </field>
            </group>  

            <group string='Cleaning'>
              <field name='cleaning_services_ids' string=''>
                <tree editable="bottom">
                  <field name='product_id' string='Service'/>
                  <field name='name' string='Description'/>
                </tree> 
              </field>
            </group>  

            <group string='Veterinary'>
              <field name='veterinary_services_ids' string=''>
                <tree editable="bottom">
                  <field name='product_id' string='Service'/>
                  <field name='name' string='Description'/>              
                </tree> 
              </field>
            </group>  

            <div class="col-2" attrs="{'invisible': [('feeding_services_ids','=',False),('cleaning_services_ids','=',False),('veterinary_services_ids','=',False)]}">
                <button string="" name="action_create_quotations" type="object" class="oe_highlight" data-hotkey="g">
                    <i class="fa fa-dollar"/> Services Quotation
                </button>
            </div>

          </page>

        </xpath>

      </field>
    </record>

    <record id="view_hotel_mac_reservation_form_inherit" model="ir.ui.view">
      <field name="name">hotel.folio.form</field>
      <field name="model">hotel.folio</field>
      <field name="type">form</field>
      <field name="priority" eval="8"/>
      <field name="inherit_id" ref="hotel.view_hotel_folio_form"/>
      <field name="arch" type="xml">

        <xpath expr="//form" position="inside">
          <div class="oe_button_box" name="button_box">
            <field name='mac_has_service' invisible='1'/>
            <button title='' string="" name="action_view_sale_orders_services" type="object" class="oe_highlight" data-hotkey="g"  attrs="{'invisible': [('mac_has_service','=',False)]}">
              <i class='fa fa-hotel'/> MAC Services
            </button>
          </div>
        </xpath>

      </field>
    </record>

  </data>
</odoo>